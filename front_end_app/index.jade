extends layout

block content
  nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container(ng-controller = "TabController as tab")
      .navbar-header(ng-class = "{active:tab.isSet(1)}")
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#', ng-click= "tab.setTab(1)") My App
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li(ng-class= "{active:tab.isSet(1)}")
            a(href='#', ng-click= "tab.setTab(1)") Home
          li(ng-class= "{active:tab.isSet(2)}")
            a(href='#about', ng-click= "tab.setTab(2)") About
          li(ng-class= "{active:tab.isSet(3)}")
            a(href='#project', ng-click= "tab.setTab(3)") Project
      ///.nav-collapse 
  ///.container 
  div(ng-view)
  //Bootstrap core JavaScript
        ================================================== 
  //Placed at the end of the document so the pages load faster 
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
  //IE10 viewport hack for Surface/desktop Windows 8 bug 
    script(src='bower_components/bootstrap/assets/js/ie10-viewport-bug-workaround.js')
